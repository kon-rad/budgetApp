{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Welcome to your BudgetApp</h1>
                <div class="row">
                    <div class="col-xs-12">
                        <a href="/create/item" class="btn btn-primary">Add New Item</a>
                    </div>
                </div>
                <table class="table">
                    {% if id is defined %}
                        <h1>{{id}}</h1>
                    {% else %}
                        No
                    {% endif %}
                    {% if form is defined %}
                        {{form_start(form)}}
                        {{form_widget(form)}}
                        {{form_end(form)}}
                    {% endif %}
                </table>
            </div>


            <div id="status">
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}