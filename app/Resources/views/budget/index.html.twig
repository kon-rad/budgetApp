{% extends 'base.html.twig' %}
{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Welcome to your BudgetApp</h1>
                <div class="row">
                    <div class="col-sm-12">
                        <a href="/budget/create" class="btn btn-primary">Add New Item</a>
                    </div>
                </div>
                <table class="table">
                    {% if budgets is defined %}
                        <thead>
                            <tr>
                                <th scope="col">Date</th>
                                <th scope="col">Item</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for budget in budgets %}
                                <tr scope="row">
                                    <td>{{ budget.date|date('F j, Y, g:i') }}</td>
                                    <td>{{ budget.item }}</td>
                                    <td><strong>{{ budget.amount}}</strong></td>
                                    <td><a class="btn btn-warning" href="/budget/edit/{{ budget.id}}">Edit</a><a class="btn btn-danger" href="/budget/delete/{{ budget.id}}">Delete</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    {% else %}
                        No
                    {% endif %}
                    {% if form is defined %}
                        {{form_start(form)}}
                        {{form_widget(form)}}
                        {{form_end(form)}}
                    {% endif %}
                </table>
            </div>


            <div id="status">
            </div>

        </div>
    </div>
{% endblock %}

{% block stylesheets %}
{% endblock %}