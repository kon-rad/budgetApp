<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}BudgetApp{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        {% if app.environment == 'dev' %}
            <link rel="stylesheet" href="http://127.0.0.1:3000/static/style.css" />
            <link rel="stylesheet" href="http://127.0.0.1:3000/static/lib/css/bootstrap.min.css" />
            <link rel="stylesheet" href="http://127.0.0.1:3000/static/lib/css/bootstrap-theme.min.css" />
        {% else %}
            <link rel="stylesheet" href="{{ asset('dist/style.css') }}" />
            <link rel="stylesheet" href="{{ asset('dist/lib/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('dist/lib/css/bootstrap-theme.min.css') }}" />
        {% endif %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            </script>
            {% if app.environment == 'dev' %}
                <script src="http://127.0.0.1:3000/static/bundle.js"></script>
                <!-- <script src="http://127.0.0.1:3000/static/lib/js/bootstrap.min.js"></script> -->
            {% else %}
                <script src="{{ asset('dist/bundle.js') }}"></script>
                <!-- <script src="{{ asset('dist/lib/js/bootstrap.min.js') }}"></script> -->
            {% endif %}
        {% endblock %}

            <script
                  src="https://code.jquery.com/jquery-3.2.1.min.js"
                  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
                  crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    </body>
</html>